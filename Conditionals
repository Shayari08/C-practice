//Write a C program that accepts three integers and find the maximum of three.
#include<stdio.h>

int main()
{
    int x,y,z;
    printf("x: ");
    scanf("%i",&x);
    printf("y: ");
    scanf("%i",&y);
    printf("z: ");
    scanf("%i",&z);
    if(x>y && x>z){
        printf("The maximum number is:%i",x);
    }
   else if(y>x && y>z){
       printf("The maximum number is:%i",y);
   }
   else if(z>x && z>y){
       printf("The maximum number is:%i",z);
   }
}
